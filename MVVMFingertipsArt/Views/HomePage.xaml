<Page
    x:Class="MVVMFingertipsArt.Views.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:data="using:MVVMFingertipsArt.Models"
      xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
      xmlns:animations="using:Microsoft.Toolkit.Uwp.UI.Animations"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Style="{StaticResource PageStyle}"
    mc:Ignorable="d">
    <Grid
        x:Name="ContentArea"
        Margin="{StaticResource MediumLeftRightMargin}">
        <Grid
        >
            <!--The SystemControlPageBackgroundChromeLowBrush background represents where you should place your content. 
                Place your content here.-->

            <!--<ParallaxView Source="{Binding ElementName=HomeGrid}"
                          VerticalShift="500">
                <Image Source="ms-appx:///Assets/b.jpg" />
            </ParallaxView>-->
          
                    <ScrollViewer>
                <!--<Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="400"/>
                        <RowDefinition />
                    </Grid.RowDefinitions>-->
                    <!--<Grid Grid.Row="0">
                        <Image   Source="ms-appx:///Assets/B.JPG" Stretch="UniformToFill"/>
                    </Grid>-->
                    <GridView ItemsSource="{x:Bind ViewModel.Data ,Mode=OneWay}"
                              x:Name="HomeGrid"
                              Grid.Row="1"
                              IsItemClickEnabled="True"
                              ContainerContentChanging="HomeGrid_ContainerContentChanging"
                              ItemContainerTransitions="{x:Null}"
                              ItemClick="{x:Bind ViewModel.GridView_ItemClick}">



                   
                        <GridView.HeaderTemplate>
                        <DataTemplate>
                            <StackPanel CornerRadius="40">
                                <!--<Image   Source="ms-appx:///Assets/B.JPG"
                                         Height="400"
                                         Stretch="UniformToFill" />-->
                                <Image x:Name="Logo"
                                       VerticalAlignment="Top"
                                       Margin="0,30,0,0"
                                    HorizontalAlignment="Left"
                                       Width="500">
                                    <Image.Source>
                                        <SvgImageSource UriSource="ms-appx:///Assets/BuildCast.svg" />
                                    </Image.Source>
                                </Image>
                            </StackPanel>
                        </DataTemplate>
                    </GridView.HeaderTemplate>
                    <GridView.ItemTemplate>
                            <DataTemplate x:DataType="data:GridViewDataTemplate">

                                    <StackPanel Margin="20"
                                               CornerRadius="40"
                                            Background="{StaticResource InAppBackgroundAcrylicBrush}">
                                    
                                        <Image x:Name="av"
                                               Width="180"
                                               Source="{x:Bind Avatar}">
                                        </Image>
                                   
                                    <TextBlock  Text="{x:Bind Name}"
                                                FontSize="36"
                                                HorizontalAlignment="Center"
                                                FontFamily="微软雅黑" />

                                </StackPanel>
                               
                                <!--<Grid Height="300"
                                              Width="180">
                                            <Image x:Name="av"
                                                   animations:Connected.Key="it"
                                                   Source="{x:Bind Avatar}">
                                            </Image>
                                            <Border Background="#A5FFFFFF"
                                                    Height="40"
                                                    VerticalAlignment="Bottom">
                                                <TextBlock  Text="{x:Bind Name}"
                                                            FontSize="36"
                                                            HorizontalAlignment="Center"
                                                            FontFamily="微软雅黑" />
                                            </Border>
                                        </Grid>-->

                            </DataTemplate>
                        </GridView.ItemTemplate>

                    </GridView>

                <!--</Grid>-->
              
                    </ScrollViewer>
               
             

        </Grid>
    </Grid>
</Page>
