    xmlns:con="using:Microsoft.UI.Xaml.Controls"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:extensions="using:Microsoft.Toolkit.Uwp.UI.Extensions"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Loaded="Page_Loaded"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource CustomAcrylicBackgroundBrush}">
        <Grid x:Name="BackgroundPanel">
            <!--<Image x:Name="BackgroundImage"
                   extensions:VisualExtensions.NormalizedCenterPoint="0.5,0.5,0"
                   ImageOpened="OnBackgroundImageOpened"
                   Source="ms-appx:///Assets/IMG_1558.JPG"
                   Stretch="UniformToFill"
                   Visibility="Collapsed">
                <animations:Implicit.ShowAnimations>
                    <animations:ScaleAnimation From="1.6"
                                               To="1"
                                               Duration="0:0:2" />
                    <animations:OpacityAnimation From="0"
                                                 To="1"
                                                 Duration="0:0:2" />
                </animations:Implicit.ShowAnimations>
            </Image>-->
            <!--<Rectangle x:Name="TintShade"
                       Opacity="0.1"
                       Fill="#BFCFB5C0">
            </Rectangle>-->
            <!--<Rectangle x:Name="DarkOverlay"
                       Opacity="0.6"
                       Fill="{ThemeResource SystemControlAcrylicWindowBrush}" />-->
        </Grid>
        <!--  Style="{StaticResource NavigationViewStyleNav}"  -->
        <con:NavigationView x:Name="NavShell" ItemInvoked="NavShell_ItemInvoked">
            <con:NavigationView.MenuItems>
                <con:NavigationViewItem x:Uid="Home" Tag="HomePage" />
                <con:NavigationViewItem x:Uid="Bing" Tag="BingPic" />
            </con:NavigationView.MenuItems>
            <Grid>
                <Frame x:Name="ContentFrame" Navigated="ContentFrame_Navigated" />
            </Grid>
        </con:NavigationView>
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="{x:Bind NavShell.CompactModeThresholdWidth}" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="NavShell.PaneDisplayMode" Value="Top" />
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
    </Grid>
</Page>
