<Page
    x:Class="MVVMFingertipsArt.Views.ShellPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"    
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:animations="using:Microsoft.Toolkit.Uwp.UI.Animations"
      xmlns:extensions="using:Microsoft.Toolkit.Uwp.UI.Extensions"
    mc:Ignorable="d"
    Loaded="Page_Loaded">

    <Grid >
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="{x:Bind NavShell.CompactModeThresholdWidth}" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="NavShell.PaneDisplayMode" Value="Top" />
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups >
        <Grid x:Name="BackgroundPanel">
            <Image x:Name="BackgroundImage"
                   extensions:VisualExtensions.NormalizedCenterPoint="0.5,0.5,0"
                   ImageOpened="OnBackgroundImageOpened"
                   Source="ms-appx:///Assets/IMG_1558.JPG"
                   Stretch="UniformToFill"
                   Visibility="Collapsed">
                <animations:Implicit.ShowAnimations>
                    <animations:ScaleAnimation From="1.6"
                                               To="1"
                                               Duration="0:0:2" />
                    <animations:OpacityAnimation From="0"
                                                 To="1"
                                                 Duration="0:0:2" />
                </animations:Implicit.ShowAnimations>
            </Image>
            <!--<Rectangle x:Name="TintShade"
                       Opacity="0.1"
                       Fill="#BFCFB5C0">               
            </Rectangle>-->
            <Rectangle x:Name="DarkOverlay"
                       Opacity="0.6"
                       Fill="{ThemeResource SystemControlAcrylicWindowBrush}" />
        </Grid>
        <!-- Style="{StaticResource NavigationViewStyleNav}"-->
        <NavigationView Style="{StaticResource ShellNavigationViewStyle}"  x:Name="NavShell"
                        ItemInvoked="NavShell_ItemInvoked" >
            <NavigationView.MenuItems>
                <NavigationViewItem  x:Uid="Home" Tag="HomePage"/>
                <NavigationViewItem  x:Uid="Bing" Tag="BingPic" />
            </NavigationView.MenuItems>
            <Grid>
                <Frame x:Name="ContentFrame" Navigated="ContentFrame_Navigated">
                </Frame>
            </Grid>
        </NavigationView>
    </Grid>
</Page>
