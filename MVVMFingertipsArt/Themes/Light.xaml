<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MVVMFingertipsArt.Themes"
    xmlns:media="using:Windows.UI.Xaml.Media">
    <media:AcrylicBrush x:Key="CustomAcrylicBackgroundBrush"
                        BackgroundSource="HostBackdrop"
                        TintOpacity="0.8"
                        TintColor="AliceBlue"
                        FallbackColor="AliceBlue" />
    <media:AcrylicBrush x:Key="CustomAcrylicGridViewBrush"
                        BackgroundSource="Backdrop"
                        TintOpacity="0.2"
                        TintColor="{ThemeResource SystemAccentColor}"
                        FallbackColor="#FFFFFF00" />
    <media:AcrylicBrush x:Key="CustomAcrylicOKBtnBrush"
                        BackgroundSource="HostBackdrop"
                        TintOpacity="0.8"
                        TintColor="#96e6a1"
                        FallbackColor="#96e6a1" />
</ResourceDictionary>
